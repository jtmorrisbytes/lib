{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "extendedDiagnostics": true,
    "declaration": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["index.js"]
}
